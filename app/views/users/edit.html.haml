                      %br/
                      =f.text_field :number
                    .col-md-7
                      %label Bairro:
                      %br/
                      =f.text_field :neighborhood
                  .row
                    .col-md-5
                      %label Cidade:
                      %br/
                      =f.text_field :city
                    .col-md-7
                      %label Estado:
                      %br/
                      =f.text_field :state
                      
                  .row
