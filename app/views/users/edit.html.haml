        = form_for [@user], role: "form" do |f|
          .dados_perfil_esquerda
            .row
              %h1 Conte-nos mais sobre você
              .perfil_bloco_um.cadastro_perfil
                .row
                  .col-md-5
                    %label Nome:
                    %br/
                    =f.text_field :name
                  .col-md-7
                    %label Sobrenome:
                    %br/
                    =f.text_field :last_name
                .row
                  .col-md-5
                    %label E-mail:
                    %br/
                    =f.text_field :email
                  .col-md-7
                    %label Data de Nascimento:
                    %br/
                    =f.text_field :birthdate
                .row
                  .col-md-5
                    %label Empresa:
                    %br/
