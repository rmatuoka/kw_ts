%section.content-header
  %h1
    Galeria de Fotos
    = "#{@organization.title}" 
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Home
    %li
      %a{:href => "#{admin_organizations_path()}"}
        %i.fa.fa-dashboard
        Eventos
    %li.active Galeria de Fotos
/ Main content
%section.content
  .col-xs-12
    %p
      = link_to "Nova Foto", new_admin_organization_organization_image_path, :class => "btn btn-primary" 
    
    .box
      .box-header
        %h3.box-title 
          Galeria de Fotos 
          
      .box-body.table-responsive.no-padding#tag_cloud

        /- tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| 
        /  = link_to tag.name, admin_tag_path(tag.name), :class => css_class
        / - tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class|
        /   = link_to(tag.name, admin_tag_path(tag.name), :class => css_class)
      .box-body.table-responsive.no-padding
        %table.table.table-hover
          %tr
            %th=t("activerecord.attributes.article.title") 
            %th Imagem
            %th=t("actions")
          - for organization_image in @organization_images 
            %tr
              %td= organization_image.title 
              %td=""            
              %td 
                = link_to t("show"), admin_organization_organization_image_path(@organization, organization_image), :class => "btn btn-default"
                = link_to t("edit"), edit_admin_organization_organization_image_path(@organization, organization_image), :class => "btn btn-default"
                = link_to 'Destroy', admin_organization_organization_image_path(@organization, organization_image), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default"

    %p
      = link_to "Novo Artigo", new_admin_organization_organization_image_path(@organization), :class => "btn btn-primary" 
      / = link_to "Ver Todos", admin_articles_path, :class => "btn btn-primary"  if !params[:tag].blank?



