%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Subtitle
      %th Description
      %th Ordem
      %th Active
      %th Published
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.subtitle
        %td= article.description
        %td= article.ordem
        %td= article.active
        %td= article.published
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

