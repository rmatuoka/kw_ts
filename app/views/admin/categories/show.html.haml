%section.content-header
  %h1
    Categorias  
    %small Control panel
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Home
    %li.active Categorias
     

/ Main content
%section.content
  .row
    / left column
    .col-md-12
      / general form elements
      .box.box-primary
        .box-header
          %h3.box-title="#{@admin_category.name}"
        
        .box-body  
          %p 
            = @admin_category.description

          %p 
            = @admin_category.published

  = link_to "Edit", edit_admin_category_path(@admin_category), :class => "btn btn-default"
  = link_to "View All", admin_categories_path, :class => "btn btn-default"