= form_for @admin_enterprise do |f|
  -if f.error_messages
    .alert.alert-danger.alert-dismissable
      %i.fa.fa-ban
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %b Alert!
      Confira os campos marcados em vermelho.

  .box-body
    .form-group
      =t('activerecord.attributes.admin_enterprise.name')      
      = f.text_field :name, :class => "form-control", :placeholder => "Preencha o nome"
    .form-group
      =t('activerecord.attributes.admin_enterprise.description')
      = f.text_area :description, :class => "form-control", :placeholder => "descrição"
    %select.select2.form-control#user_services_performed{name: "admin_enterprise[specialties]", multiple: "multiple"}
      %option{:value => "especialidade1"} especialidade1
      %option{:value => "especialidade2"} especialidade2
      %option{:value => "especialidade3"} especialidade3

    .form-group
      = f.label :img_enterprise
      = f.file_field :img_enterprise, :class => "form-control"  
    - if @admin_enterprise.img_enterprise.file?
      .form-group
        =image_tag(@admin_enterprise.img_enterprise.url)
    .form-group
      = f.label :banner_enterprise
      = f.file_field :banner_enterprise, :class => "form-control"  
    - if @admin_enterprise.banner_enterprise.file?
      .form-group
        =image_tag(@admin_enterprise.banner_enterprise.url)
    
  .box-footer
    =f.submit "Salvar", :class => "btn btn-primary"

-content_for :footer do
  :javascript
    $(function () {
      $(".select2").select2();
    });