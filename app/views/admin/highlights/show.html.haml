%section.content-header
  %h1
    Banners  
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Home
    %li.active Banners
     

/ Main content
%section.content
  .row
    / left column
    .col-md-12
      / general form elements
      .box.box-primary
        .box-header
          %h3.box-title="#{@admin_highlight.title}"
        
        .box-body  
          %p= "#{t("activerecord.attributes.admin_highlight.subtitle")}: #{@admin_highlight.subtitle}"
        .box-body  
          %p= "#{t("activerecord.attributes.admin_highlight.ordem")}: #{@admin_highlight.ordem}"   
        .box-body  
          %p= "#{t("activerecord.attributes.admin_highlight.published")}: #{@admin_highlight.published}"
        - if @admin_highlight.image_highlight.file?
          .box-body
            %p=image_tag(@admin_highlight.image_highlight.url)

        .box-body  
          %p= "#{t("activerecord.attributes.admin_highlight.link")}: #{@admin_highlight.link}"

  = link_to t("back_list"), admin_highlights_path, :class => "btn btn-default"
  = link_to t("edit"), edit_admin_highlight_path(@admin_highlight), :class => "btn btn-default" 
  = link_to "Novo Banner", new_admin_highlight_path, :class => "btn btn-primary"